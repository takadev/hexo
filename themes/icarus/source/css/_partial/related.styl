.related-inner
    @extend $block
    overflow: hidden
    padding: 10px 10px 10px 10px

.related-header
    padding: 10px 10px 0px

.related-header-line
    display: block
    margin-bottom: 14px
    text-align: center
    text-decoration: none
    font-size: 1.2em
    color: color-default
    line-height: line-height-title
    a&:visited
        color: color-default
    a&:hover
        color: color-link
    @media mq-mini
        font-size: 1.2em
    @media mq-mobile
        font-size: 1.2em

.related-posts
    li
        padding: 10px 0 10px 5px
    li
        .related-posts-item
            margin-bottom: 14px
    li
        .related-posts-image
            /*
            float: left
            margin-left: 10px
            width: 60%
            height: 60%
            position: relative
            overflow: hidden
            */
            float: left
            max-width: 100%;
            height: auto;
            border: none;
            vertical-align: bottom;
            display: block;
        .related-posts-inner
          margin: 5px
          padding: 0
          border: 0
          font-size: 100%
          .related-posts-date
              color: #aaa
              float: left
              text-transform: uppercase
              font-size: 16px
              margin-left: 10px
          .related-posts-title
              a
                  color: color-sidebar-text-dark
                  transition: all 0.2s ease
                  padding: 10px 5px 10px 10px
              float: left
              font-size: 16px
          .related-posts-tags
              float: left
              text-align: center
              font-size: 16px
              a
                  padding: 10px 5px 10px 10px
